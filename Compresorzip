import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.util.zip.ZipEntry;
import java.util.zip.ZipOutputStream;

public class ZipFileExample {
    public static void main(String[] args) {
        String zipFileName = "Archivo.ZIP"; // Nombre del archivo ZIP en mayúsculas
        String[] filesToCompress = {"archivo1.txt", "archivo2.txt"}; // Archivos a comprimir

        try (ZipOutputStream zipOutputStream = new ZipOutputStream(new FileOutputStream(zipFileName))) {
            for (String fileToCompress : filesToCompress) {
                File file = new File(fileToCompress);
                FileInputStream fileInputStream = new FileInputStream(file);
                ZipEntry zipEntry = new ZipEntry(file.getName());
                zipOutputStream.putNextEntry(zipEntry);

                byte[] buffer = new byte[1024];
                int length;
                while ((length = fileInputStream.read(buffer)) > 0) {
                    zipOutputStream.write(buffer, 0, length);
                }

                fileInputStream.close();
            }

            System.out.println("Archivos comprimidos con éxito en " + zipFileName);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}

public class CustomZipCompressor {
    public static void main(String[] args) {
        String archivo1 = "C:\\Users\\TuUsuario\\Documents\\archivo1.txt";
        String archivo2 = "C:\\Users\\TuUsuario\\Documents\\archivo2.txt";
        String archivoZip = "C:\\Users\\TuUsuario\\Documents\\ArchivoComprimido.ZIP";

        try (FileOutputStream fos = new FileOutputStream(archivoZip);
             ZipOutputStream zos = new ZipOutputStream(fos)) {
            addToZipFile(archivo1, zos);
            addToZipFile(archivo2, zos);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    // Resto del código igual que en el ejemplo anterior
}





import java.io.*;
import java.util.zip.ZipEntry;
import java.util.zip.ZipOutputStream;

public class CustomZipCompressor {
    public static void main(String[] args) {
        // Rutas de los archivos a comprimir
        String archivo1 = "C:\\Users\\TuUsuario\\Documents\\archivo1.txt";
        String archivo2 = "C:\\Users\\TuUsuario\\Documents\\archivo2.txt";

        // Ruta del archivo ZIP de salida
        String archivoZip = "C:\\Users\\TuUsuario\\Documents\\ArchivoComprimido.ZIP";

        try (FileOutputStream fos = new FileOutputStream(archivoZip);
             ZipOutputStream zos = new ZipOutputStream(fos)) {
            addToZipFile(archivo1, zos);
            addToZipFile(archivo2, zos);
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private static void addToZipFile(String fileName, ZipOutputStream zos) throws IOException {
        File file = new File(fileName);
        FileInputStream fis = new FileInputStream(file);
        ZipEntry zipEntry = new ZipEntry(file.getName());
        zos.putNextEntry(zipEntry);

        byte[] buffer = new byte[1024];
        int length;
        while ((length = fis.read(buffer)) > 0) {
            zos.write(buffer, 0, length);
        }

        fis.close();
        zos.closeEntry();
    }
}
